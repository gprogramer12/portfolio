{
  "functions": {
    "api/index.mjs": { "runtime": "nodejs20.x" }
  },
  "rewrites": [
    {
      "source": "/(.*\\.(?:js|css|ico|png|jpg|jpeg|gif|svg|webp|woff2?|ttf|map))",
      "destination": "/$1"
    },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
